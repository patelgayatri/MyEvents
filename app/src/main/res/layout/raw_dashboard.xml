<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card"
    card_view:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/normal_margin"
    app:cardCornerRadius="@dimen/normal_margin"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:contentPadding="@dimen/contentpadding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name_txt"
                android:gravity="center"
                android:textColor="@color/white"
                style="@style/textCardStyleBold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/date_txt"
                android:visibility="gone"
                android:layout_width="wrap_content"
                style="@style/textCardStyle" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/time_txt"
                android:visibility="gone"
                android:layout_width="wrap_content"
                style="@style/textCardStyle" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical">
            <TextView
                android:id="@+id/day_txt"
                style="@style/textCardStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:minWidth="70dp"
                android:padding="3dp"
                android:textColor="@color/secondaryTextColor" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/daysLable"
                style="@style/textCardStyle"
                android:layout_width="wrap_content"
                android:text="@string/days"
                android:textColor="@color/secondaryTextColor" />
            />

    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>