<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="editTextStyle">
        <item name="autoSizeTextType">uniform</item>
        <item name="android:layout_margin">@dimen/editMargin</item>
        <item name="android:padding">@dimen/contentpadding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/averia_gruesa_libre</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:background">#41FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="textStyle">
        <item name="autoSizeTextType">uniform</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/averia_gruesa_libre</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>

    </style>

    <style name="textCardStyle">
        <item name="android:textStyle">normal</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/averia_gruesa_libre</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>


    </style>

    <style name="textCardStyleBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:fontFamily">@font/averia_gruesa_libre</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>